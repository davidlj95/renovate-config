{
  "dependabot": {
    "description": "Use dependabot-like Semantic Commits: 'build([dev-]deps)'",
    "semanticCommitType": "build",
    "semanticCommitScope": "deps",
    "packageRules": [
      {
        "matchPackageNames": ["*"],
        "semanticCommitType": "build"
      },
      {
        "matchDepTypes": ["devDependencies"],
        "semanticCommitScope": "deps-dev"
      }
    ]
  }
}
